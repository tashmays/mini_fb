<% if @comment.errors.any? %>
    <h4>Errors:</h4>
    <p><%= @comment.errors.full_messages.join(', ') %></p>
    <hr />
<% end %>

<%= form_for @comment do |f| %>

    <%= f.label :body %>:
    <%= f.text_field :body %>

    <%= f.hidden_field :user_id, value: params[:user_id] %>
    <%= f.hidden_field :post_id, value: params[:post_id] %>
    
    <br />
    <br />

    <%= f.submit "Submit" %>

<% end %>