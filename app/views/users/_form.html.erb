<% if @user.errors.any? %>
    <h4>Errors:</h4>
    <p><%=@user.errors.full_messages.join(', ')%></p>
    <hr />
<% end %>
<%= form_for @user do |f| %>
    <%= f.label :first_name %>:
    <%= f.text_field :first_name %>
    <br />
    <br />
    <%= f.label :last_name %>:
    <%= f.text_field :last_name %>
    <br />
    <br />
    <%= f.label :email %>:
    <%= f.text_field :email %>
    <br />
    <br />
    <%= f.submit "Submit"%>

<% end %>